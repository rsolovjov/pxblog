<h1>Show Post</h1>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= markdown(@post.body) %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.user_post_path(@conn, :edit, @user, @post) %></span>
<span><%= link "Back", to: Routes.user_post_path(@conn, :index, @user) %></span>
